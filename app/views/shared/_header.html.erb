<header id="template-nt-hero" data-section="home" role="banner" style="background: url(<%= image_path('P2.jpg') %>) center top fixed;background-size: autog; background-repeat: no-repeat">
  <div class="template-nt-intro">
    <div class="container">
      <div class="row">
        <div class="col-md-8 template-nt-text">
          <h2 class="to-animate-off intro-animate-1"><%= t('main_banner.headline')%></h2>
          <p class="to-animate-off intro-animate-2"><%= t('main_banner.text')%></p>
        </div>
        <div id="user-home-form" class="col-xs-12 col-md-4">
          <div class="row">
            <div id="user-form-btm" class="col-xs-1 visible-xs">
              <span class="icon-pen"></span>
            </div>
            <div id="user-form-content" class="col-xs-8 col-xs-offset-2 col-md-10 col-md-offset-1">
              <%= render 'shared/menu_form' %>
            </div>
          </div>
        </div>
        <div class="col-md-6 text-right template-nt-intro-img to-animate-off intro-animate-4">
        </div>
      </div>
    </div>
  </div>
</header>
