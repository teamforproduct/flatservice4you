<div id="template-nt-solution" data-section="solution">
  <div class="template-nt-solution-content">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2 template-nt-section-heading text-center">
          <h2 class="template-nt-lead to-animate-off"><%= t('solution.headline')%></h2>
          <p class="template-nt-sub to-animate-off"><%= t('solution.text')%></p>
        </div>
        <div class="col-md-6 template-nt-text-wrap">
          <div class="row text-center">
            <div class="col-md-12 col-sm-6 col-xs-6 col-xxs-12 template-nt-text animate-object solution-animate-3 solution-card">
              <span class="solution-icon">
                <i class="icon-money"></i>
              </span>
              <h4 class="template-nt-uppercase-sm"><%= t('solution.reason_1')%></h4>
              <p><%= t('solution.reason_1_text')%></p>
            </div>
            <div class="col-md-12 col-sm-6 col-xs-6 col-xxs-12 template-nt-text animate-object solution-animate-4 solution-card">
              <span class="solution-icon">
                <i class="icon-car"></i>

              </span>
              <h4 class="template-nt-uppercase-sm"><%= t('solution.reason_2')%></h4>
              <p><%= t('solution.reason_2_text')%></p>
            </div>

          </div>
        </div>
        <div class="col-md-6 template-nt-text-wrap">
          <div class="row text-center">
            <div class="col-md-12 col-sm-6 col-xs-6 col-xxs-12 template-nt-text animate-object solution-animate-5 solution-card">
              <span class="solution-icon">
                <i class="icon-handshake"></i>
              </span>
              <h4 class="template-nt-uppercase-sm"><%= t('solution.reason_3')%></h4>
              <p><%= t('solution.reason_3_text')%></p>
            </div>
            <div class="col-md-12 col-sm-6 col-xs-6 col-xxs-12 template-nt-text animate-object solution-animate-6 solution-card">
                <span class="solution-icon">
                <i class="icon-family"></i>
              </span>
              <h4 class="template-nt-uppercase-sm"><%= t('solution.reason_4')%></h4>
              <p><%= t('solution.reason_4_text')%></p>
            </div>

          </div>
        </div>

        <div class="template-nt-spacer template-nt-spacer-sm"></div>

        <div class="col-md-4 col-md-offset-4 text-center to-animate-off">
          <a class="btn btn-success" href=""><%= t('home_index')%></a>
        </div>

      </div>
    </div>
  </div>

</div>