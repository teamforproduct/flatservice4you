<div id="template-nt-subscribe" data-section="register">
  <div class="sz_shop_slider_wrapper">
    <div class="sz_shop_slider_header"></div>
    <div class="container">
      <div class="row animate-box-off">
        <%= form_for @user do |f| %>
          <div class="col-md-3 col-sm-3">
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: true %>
            </div>
          </div>

          <div class="col-md-3 col-sm-3">
            <div class="form-group">
              <%= f.text_field :surname, class: "form-control", placeholder: true %>
            </div>
          </div>

          <div class="col-md-3 col-sm-3">
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: true,
                                oninvalid: "this.setCustomValidity('Invalid email')",
                                oninput: "setCustomValidity('')",
                                pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}',
                                required: true %>
            </div>
          </div>

          <div class="col-md-3 col-sm-3">
            <div class="form-group">
              <%= f.submit t('sign_up_now'), class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
        <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4 text-center">
          <%= link_to  "/auth/facebook", id: "sign_in", class: 'btn btn-xs btn-white fb_btn' do %>
            <%= fa_icon('facebook')%>
            <%= t('sing_in_with_facebook') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>